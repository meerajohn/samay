%h1.page-header
  Clients
  %small / Index
.row
  .col-md-12
    .text-right
      = new_link Client do
        %button.btn.btn-success{type: "button"} New
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th #
            %th Code
            %th Name
            %th Contact
            %th.action-cell
        %tbody
          - @masters.each do |client|
            %tr
              %td= client.id
              %td= client.code
              %td= client.name
              %td= client.contact
              %td.action-cell
                = show_link client do
                  %span.btn-xs.btn-info
                    %i.fa.fa-search
                %span.spacer
                = edit_link client do
                  %span.btn-xs.btn-primary
                    %i.fa.fa-pencil
.row
  .col-md-12.text-right
    = paginate @masters
