!!!
%html{lang: "en"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{charset: "utf-8"}/
    %title Samay TimeSheet Entry System
    %meta{content: "Online accounting for small businesses in India", name: "description"}/
    %meta{content: "Samyukti", name: "author"}/
    %meta{content: "width=device-width, initial-scale=1, maximum-scale=1", name: "viewport"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/

    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      = javascript_include_tag "ie", "data-turbolinks-track" => true
    %style#holderjs-style{type: "text/css"}
  %body{"app-controller" => "#{params[:controller].classify}", "app-action" => "#{params[:action]}" }
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{data: {target: ".navbar-collapse", toggle: "collapse"}, type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: public_root_path} Samay
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{href: ""} About
            %li
              %a{href: ""} Policies
            %li
              %a{href: ""} Books
            %li
              - if user_signed_in?
                = link_to "Sign Out", destroy_user_session_path, method: :delete
              - else
                = link_to "Sign In", new_user_session_path
          %form.navbar-form.navbar-right
            %input.form-control{placeholder: "Search...", :type => "text"}/
    .container-fluid
      .row
        .col-sm-4.col-sm-offset-4.col-md-4.col-md-offset-4.main
          = yield

    = javascript_include_tag "application"
    :javascript
      jQuery(document).ready(function () {
          Page.init();
      });
