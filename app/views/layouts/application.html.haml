!!!
%html{lang: "en"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{charset: "utf-8"}/
    %title Samay TimeSheet Entry System
    %meta{content: "Online accounting for small businesses in India", name: "description"}/
    %meta{content: "Samyukti", name: "author"}/
    %meta{content: "width=device-width, initial-scale=1, maximum-scale=1", name: "viewport"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/

    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      = javascript_include_tag "ie", "data-turbolinks-track" => true
    %style#holderjs-style{type: "text/css"}
  %body{"app-controller" => "#{params[:controller].classify}", "app-action" => "#{params[:action]}" }
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{data: {target: ".navbar-collapse", toggle: "collapse"}, type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: application_root_path} Samay
        .navbar-collapse.collapse
          %form.navbar-form.navbar-right{action: "#{search_path}", method: :get}
            = text_field_tag 's', params[:s], placeholder: 'Search...', class: 'form-control', autofocus: true
            %button.btn.btn-success{type: "submit"}
              %i.fa.fa-search
            %span.space-r-m
            = link_to edit_user_registration_path do
              .btn.btn-info
                %i.fa.fa-user
            = link_to destroy_user_session_path, method: :delete do
              %button.btn.btn-danger Sign out
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          .navbar-collapse.collapse
            = render 'layouts/navigation'
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          = render 'layouts/flash'
          = yield

    = javascript_include_tag "application"
    :javascript
      jQuery(document).ready(function () {
          Page.init();
      });
