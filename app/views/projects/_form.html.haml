= simple_nested_form_for @master, defaults: {input_html: { class: "form-control" }}, html: { multipart: true } do |f|
  .row
    .col-md-12
      .text-right
        = render 'shared/masters/form_actions', f: f

  = render 'shared/errors/messages', object: f.object

  .form-inputs
    .row
      .col-md-6
        = f.association :division, input_html: {class: 'selectize'}
      .col-md-6
        = f.association :client, input_html: {class: 'selectize'}
    .row
      .col-md-6
        = f.input :code
      .col-md-6
        = f.input :name
    .row
      .col-md-6
        = f.input :start_date, as: :datepick
      .col-md-6
        = f.input :end_date, as: :datepick
    .row
      .col-md-6
        = f.association :manager, input_html: {class: "form-control selectize"}
    %h4.form-section Notes
    .row
      .col-md-12
        = f.input :notes, label: false
  .form-actions
    = render 'shared/masters/form_actions', f: f
