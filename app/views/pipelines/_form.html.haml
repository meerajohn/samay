= simple_form_for @pipeline, defaults: {input_html: { class: "form-control" }} do |f|
  .row
    .col-md-12
      .text-right
        = f.button :submit, class: 'btn-primary'
        = link_to @pipeline do
          %button.btn.btn-default{type: "button"} Cancel

  = render 'shared/errors/messages', object: f.object

  .form-inputs
    .row
      .col-md-6
        = f.input :project_id,                                 |
          collection: project_collection([f.object.project]),  |
          input_html: {class: "form-control custom"}           |
      .col-md-6
        = f.association :division, input_html: { class: 'selectize'}
    .row
      .col-md-6
        = f.input :employee_id,                                 |
          collection: employee_collection([f.object.employee]), |
          input_html: {class: "form-control custom"}            |
      .col-md-6
        = f.input :reserved_date, as: :datepick
    .row
      .col-md-6
        = f.input :status

    %h4.form-section Notes
    .row
      .col-md-12
        = f.input :notes, label: false

  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to @pipeline do
      %button.btn.btn-default{type: "button"} Cancel
