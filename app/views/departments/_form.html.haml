= simple_form_for @master, defaults: {input_html: { class: "form-control" }} do |f|
  .row
    .col-md-12
      .text-right
        = render 'shared/masters/form_actions', f: f

  = render 'shared/errors/messages', object: f.object

  .form-inputs
    .row
      .col-md-6
        = f.input :code, autofocus: true
      .col-md-6
        = f.input :name,                                |
          label: "Name",                                |
          collection: Settings.department.names,        |
          input_html: {class: "form-control selectize"} |
    .row
      .col-md-6
        = f.input :kind,                                |
          label: "Type",                                |
          collection: Settings.department.kinds,        |
          input_html: {class: "form-control selectize"} |
      .col-md-6
        = f.association :manager, input_html: {class: "form-control selectize"}

    %h4.form-section Notes
    .row
      .col-md-12
        = f.input :notes, label: false

  .form-actions
    = render 'shared/masters/form_actions', f: f
